@using Dealership.Models
@model CarLot
@{
    ViewBag.Title = $"{Model.Dealer.Name}";
}

<h2>@Model.Dealer.Name</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Car car in Model.Cars) {
            <tr>
                <td>@Html.ActionLink("View", "Index", "Detail",new { @id = car.Index }, new { @class = "btn btn-default" })</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
            </tr>
        }
    </tbody>
</table>
